        'bt.DefaultCellStyle.ForeColor = Color.Red
        'bt.FlatStyle = FlatStyle.Popup
        'bt.Resizable = DataGridViewTriState.True
        DGprincipal.Columns.Add(ch) 'agrego la columna de checkbox
